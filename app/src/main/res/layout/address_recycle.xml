<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RadioButton
        android:id="@+id/isSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_toEndOf="@+id/isSelected"
        android:layout_toRightOf="@+id/isSelected"
        android:text="Siddharth Chandra"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/address1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/isSelected"
        android:layout_toRightOf="@+id/isSelected"
        android:text="Address is defined as Sharat Pally Burdwan"
        android:textColor="@color/black"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/landmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address1"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/isSelected"
        android:layout_toRightOf="@+id/isSelected"
        android:text="Landmark"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/landmark"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/isSelected"
        android:layout_toRightOf="@+id/isSelected"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/alterPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/isSelected"
        android:layout_toRightOf="@+id/isSelected"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/name"
        android:layout_marginRight="10dp"
        android:background="@drawable/cartbutton"
        android:elevation="15dp"
        android:text="Edit"
        android:textColor="@color/white" />

</RelativeLayout>